#syntax=docker/dockerfile:1.5.2

ARG ref=main@sha256:603df81cedf0e7d932932147512697e3d846a73733f9329e77910d38c8c846be
FROM ghcr.io/nicholasdille/docker-setup/base:${ref} AS prepare

ARG name
ARG version

RUN <<EOF
url="https://github.com/structurizr/cli/releases/download/v${version}/structurizr-cli-${version}.zip"
filename="$(basename "${url}")"
curl --silent --location --fail --remote-name "${url}"
mkdir -p "${prefix}/opt/structurizr-cli"
unzip -q -o -d "${prefix}/opt/structurizr-cli" "${filename}"
ln --symbolic --relative --force "${prefix}/opt/structurizr-cli/structurizr.sh" "${prefix}${target}/bin/structurizr"
EOF