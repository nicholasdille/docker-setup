#syntax=docker/dockerfile:1.5.1

ARG ref=main
FROM ghcr.io/nicholasdille/docker-setup/base:${ref} AS prepare

ARG name
ARG version

RUN <<EOF
curl --silent --location --fail "https://github.com/docker/sbom-cli-plugin/releases/download/v${version}/sbom-cli-plugin_${version}_linux_${alt_arch}.tar.gz" \
| tar --extract --gzip --directory="${prefix}${target}/libexec/docker/cli-plugins" --no-same-owner \
    docker-sbom
"${prefix}${target}/libexec/docker/cli-plugins/docker-sbom" completion bash >"${prefix}${target}/share/bash-completion/completions/docker-sbom"
"${prefix}${target}/libexec/docker/cli-plugins/docker-sbom" completion fish >"${prefix}${target}/share/fish/vendor_completions.d/docker-sbom.fish"
"${prefix}${target}/libexec/docker/cli-plugins/docker-sbom" completion zsh >"${prefix}${target}/share/zsh/vendor-completions/_docker-sbom"
EOF