{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/product.schema.json",
  "title": "Tool",
  "description": "docker-setup tool schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of the tool",
      "type": "string"
    },
    "version": {
      "description": "Version of the tool",
      "type": "string"
    },
    "binary": {
      "description": "Name of path to the binary",
      "type": "string"
    },
    "check": {
      "description": "Version check command",
      "type": "string"
    },
    "build_dependencies": {
      "description": "Build dependencies",
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "runtime_dependencies": {
      "description": "Runtime dependencies",
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "tags": {
      "description": "Tags for the tool",
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "description": {
      "description": "Description of the tool",
      "type": "string"
    },
    "homepage": {
      "description": "Homepage of the tool",
      "type": "string"
    },
    "renovate": {
      "type": "object",
      "properties": {
        "datasource": {
          "description": "Renovate datasource",
          "type": "string"
        },
        "package": {
          "description": "Renovate package",
          "type": "string"
        },
        "extractVersion": {
          "description": "Renovate extractVersion",
          "type": "string"
        },
        "priority": {
          "description": "Renovate priority",
          "type": "string",
          "oneOf": [
            {
              "const": "high"
            },
            {
              "const": "medium"
            },
            {
              "const": "low"
            }
          ]
        },
        "required": [
          "datasource",
          "package"
        ]
      }
    }
  },
  "required": [
    "name",
    "version",
    "tags",
    "homepage",
    "description"
  ]
}