FROM opensuse/leap:15@sha256:a2ff1520e9694eb87dca1ec02ed48aeb6c74ebc20cdbe44c9c564d30f016c024
RUN zypper install -y \
        curl \
        tar \
        gzip \
        git \
        unzip \
        iptables \
        jq
# TODO: init scripts (where is /lib/lsb/init-functions?)
COPY env/run.sh /
